# Maintainer: ibrahim dursun <ibrahim.dursun@gmail.com>
pkgname=idursun-shell
pkgver=2
pkgrel=1
epoch=
pkgdesc="Shell related packages"
arch=(any)
url="https://github.com/idursun/arch-pkgs"
license=(MIT)
groups=(idursun)
depends=(
    'zsh'
    'zsh-autosuggestions'
    'zsh-syntax-highlighting'
    'termite'
    'starship-bin'
    'powerline'
    'powerline-fonts'
    'exa'
    'noto-fonts-emoji'
    'openssh'
    )
provides=()
conflicts=()
replaces=()
backup=()
source=(
    ${pkgname}-zshrc::https://raw.githubusercontent.com/idursun/configs/master/linux-arch/zsh/home/.zshrc
    ${pkgname}-termite::https://raw.githubusercontent.com/idursun/configs/master/linux-arch/termite/config/termite/config
    )
md5sums=(
    SKIP
    SKIP
)
rootdir=$PWD

package() {
    install -D -o idursun -m644 "$rootdir/$pkgname-zshrc" "$pkgdir/home/idursun/.zshrc"
    install -D -o idursun -m644 "$rootdir/$pkgname-termite" "$pkgdir/home/idursun/.config/termite/config"
}
