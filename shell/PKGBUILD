# Maintainer: ibrahim dursun <ibrahim.dursun@gmail.com>
pkgname=idursun-shell
pkgver=2
pkgrel=1
epoch=
pkgdesc="Shell related packages"
arch=(any)
url="https://github.com/idursun/arch-pkgs"
license=(MIT)
groups=(idursun)
depends=(
    'zsh'
    'zsh-autosuggestions'
    'zsh-syntax-highlighting'
    'termite'
    'starship-bin'
    'powerline'
    'powerline-fonts'
    'exa'
    'noto-fonts-emoji'
    'openssh'
    )
provides=()
conflicts=()
replaces=()
backup=()
source=(
    '_zshrc'
    'termite.config'
    )
md5sums=(
    SKIP
    SKIP
)

package() {
    install -D -o idursun -m644 "$srcdir/_zshrc" "$pkgdir/home/idursun/.zshrc"
    install -D -o idursun -m644 "$srcdir/termite.config" "$pkgdir/home/idursun/.config/termite/config"
}
