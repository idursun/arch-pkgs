# Maintainer: ibrahim dursun <ibrahim.dursun@gmail.com>
pkgname=idursun-desktop
pkgver=1
pkgrel=1
epoch=
pkgdesc="Desktop related packages"
arch=(any)
url="https://github.com/idursun/arch-pkgs"
license=(MIT)
groups=(idursun)
depends=(
    'lightdm' 
    'lightdm-gtk-greeter'
    'lightdm-webkit-theme-litarvan'
    'i3-gaps'
    'i3lock'
    'i3status-rust-bin'
    'dmenu'
    'brightnessctl'
    'firefox'
    'network-manager-applet'
    'notification-daemon'
    'pavucontrol'
    'xclip'
    'xf86-video-amdgpu'
    'xorg-xbacklight'
    'xorg-xinput'
    'xorg-xrandr'
    'ttf-dejavu'
    'ttf-font-awesome-4'
    )
optdepends=(spotify)
provides=()
conflicts=()
replaces=()
backup=()
source=(
    ${pkgname}-i3config::https://raw.githubusercontent.com/idursun/configs/master/linux-arch/i3/config/i3/config
    )
noextract=()
md5sums=(
    SKIP
    )
validpgpkeys=()
rootdir=$PWD

package() {
    cp -a "$rootdir/files/"* "$pkgdir"
    install -Dm644 -o idursun "$rootdir/$pkgname-i3config" "$pkgdir/home/idursun/.config/i3/config"
}
